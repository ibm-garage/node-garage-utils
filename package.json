{
  "name": "garage-utils",
  "version": "1.0.1",
  "description": "Common utilities for Node/Express applications at the Bluemix Garage.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm-garage/node-garage-utils.git"
  },
  "author": "Dave Steinberg <davidms@ca.ibm.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all lint test:unit:cover",
    "test:unit": "mocha test/**/*.js",
    "test:unit:watch": "mocha --watch test/**/*.js",
    "test:unit:cover": "istanbul cover _mocha test/**/*.js",
    "lint": "eslint index.js lib test",
    "format": "prettier --write '*.@(js|json)' '@(lib|test)/**/*.@(js|json)'",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=6.4.0",
    "npm": ">=3.5.3"
  },
  "files": ["index.js", "lib/"],
  "dependencies": {
    "cfenv": "^1.0.4",
    "log4js": "^2.3.4",
    "moment": "^2.18.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.2",
    "standard-version": "^4.2.0"
  }
}
