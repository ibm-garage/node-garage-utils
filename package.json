    "moment": "^2.18.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.2"
  }
}
