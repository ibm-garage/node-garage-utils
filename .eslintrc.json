{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "global-require": "error",
    "no-new-require": "error",
    "no-path-concat": "error",
    "no-var": "error",
    "no-process-exit": "off",
    "linebreak-style": ["error", "unix"]
  }
}
